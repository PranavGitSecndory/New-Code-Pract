package Practice;
import java.util.Scanner;
public class mock
{
    public static int reverseNumber(int num) {
        int reverse = 0;
        while (num > 0) {
            reverse = reverse * 10 + num % 10;
            num /= 10;

            if (reverse > 1000) {  
                System.out.println("Reversed number exceeded 1000, stopping early.");
                break;
            }
        }
        return reverse;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        System.out.println("Enter an n-digit number:");
        int num = sc.nextInt();
        
        System.out.println("Reversed number: " + reverseNumber(num));
        
        sc.close();
    }
}