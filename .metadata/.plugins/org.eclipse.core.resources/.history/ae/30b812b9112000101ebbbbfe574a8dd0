//
//Write a class with a method that prints “Hello”
//followed by a name. Synchronize this method.
package syncronization;

public class Q2_A extends Thread {
	public synchronized void run()
	{
		String name="nick";
		for(int i=1; i<=5; i++)
		{
			System.out.println("hello"+name);
			try {
				Thread.sleep(1000);
			} catch (Exception e) {
			System.out.println(e);
			}
		}
			
	}
public static void main(String[] args) {
	Q2_A ob=new Q2_A();
	ob.start();
}
}
