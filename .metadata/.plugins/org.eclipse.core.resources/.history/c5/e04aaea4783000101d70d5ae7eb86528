package File_handling;

import java.io.File;
import java.io.IOException;
import java.util.Scanner;

public class File_demo {
public static void main(String[] args) throws IOException {
	Scanner sc=new Scanner(System.in);
	
	System.out.println("Enter the file name we want to create ");
	String s=sc.next();
	
	File ob=new File("\"C:\\\\Users\\\\patil\\\\OneDrive\\\\Desktop\\\\File_handle\\\\"+s);
	boolean b=ob.createNewFile();
	if(b== true)
	{
		System.out.println("your file is "+s+" create");
	}
	else
	{
		System.out.println("somthin is wrong file not creted");
	}
	
}
}
