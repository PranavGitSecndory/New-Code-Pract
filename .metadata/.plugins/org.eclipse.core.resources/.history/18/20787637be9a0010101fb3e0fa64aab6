package com.in;

import java.io.BufferedReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.InputStreamReader;

public class DemoFileWrite {
	public static void main(String[] args) {
		
		FileWriter fw =null;
		BufferedReader br;
		InputStreamReader isr;

		
		
		try {
			//Create a new File
			fw= new FileWriter("Nikhil.txt");//creat a file
			isr =new InputStreamReader(System.in);//converts byte in to charactor it is a concat class
			//System.in is a predifne object for stream
			br=new BufferedReader(isr);
			//create a pointer from read data from console
			//br=new BufferedReader(new InputStreamReader(System.in));//for alternative way
			
			System.out.println("enter id");
			String id =br.readLine();
			System.out.println("enter name");
			String name =br.readLine();
			System.out.println("enter bsal");
			String bsal =br.readLine();
			//writing data into the text file
	
			
			
			fw.write(id);
			fw.write("#");
			fw.write(name);
			fw.write("#");
			fw.write(bsal);
			fw.write("\n");
			
			
		} catch (IOException e)
		{
			// TODO: handle exception
			e.printStackTrace();
		}
		
		finally {
			try {fw.close();//if we dont close so file will not update
				
			} catch (IOException e2) {
				// TODO: handle exception
				e2.printStackTrace();
			}
			//close the code anyway
			
		}
	}

	
}
