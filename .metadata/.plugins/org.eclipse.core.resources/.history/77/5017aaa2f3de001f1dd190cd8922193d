package Practice;
import java.util.Scanner;
public class mock
{
	public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int number = scanner.nextInt();
        
        int evenSum = 0, oddSum = 0;
        int position = 1;
        
        while (number > 0) {
            int digit = number % 10;
            
            if (position % 2 == 0) {
                evenSum += digit;
            } else {
                oddSum += digit;
            }
            
            number /= 10;
            position++;
        }
        
        int difference = evenSum - oddSum;
        System.out.println("Difference between sum of even and odd positioned digits: " + difference);
    }
}