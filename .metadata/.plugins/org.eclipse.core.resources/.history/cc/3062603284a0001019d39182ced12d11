package com.collection;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.util.ArrayList;
import java.util.LinkedList;

class Employe{
	int id;
    String name;
    double basicSalary;
    double pf;
    double ctc;
    
	public Employe(int id, String name, double basicSalary, double pf, double ctc) {
		super();
		this.id = id;
		this.name = name;
		this.basicSalary = basicSalary;
		this.pf = basicSalary*0.12;
		this.ctc = basicSalary+pf;
	}

	@Override
	public String toString() {
		return "Employe [id=" + id + ", name=" + name + ", basicSalary=" + basicSalary + ", pf=" + pf + ", ctc=" + ctc
				+ "]";
	}
	
}
public class Task_2_3_oct {
public static void main(String[] args) {
	   ArrayList<Employe> employees = new ArrayList<>();

       String inputFile = "Task.txt";   
       String outputFile = "output.txt"; 

       try (BufferedReader br = new BufferedReader(new FileReader(inputFile))) {
           String line;

           // Step 1: Read file line by line
           while ((line = br.readLine()) != null) {
               String[] parts = line.split("#");

               int id = Integer.parseInt(parts[0]);
               String name = parts[1];
               double basic = Double.parseDouble(parts[2]);

               // Step 2: Store in collection
               employees.add(new Employe(id, name, basic, , basic));
           }

       } catch (Exception e) {
           e.printStackTrace();
       }

       // Step 3: Write into new file
       try (BufferedWriter bw = new BufferedWriter(new FileWriter(outputFile))) {
           for (Employe emp : employees) {
               bw.write(emp.toString());
               bw.newLine();
           }
           System.out.println("Data written successfully to " + outputFile);

       } catch (Exception e) {
           e.printStackTrace();
       }
   
	

	
	
	
	
